// This file contains the Prisma schema for the database models
// Prisma documentation: https://www.prisma.io/docs/getting-started/setup-prisma/start-from-scratch/relational-databases-typescript-prismaPostgres
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  googleId   String?  @unique
  wishlists  Wishlist[]
}

model Game {
  id            Int          @id @default(autoincrement())
  steamAppId    Int?         @unique
  title         String
  description   String
  requiredAge   Int?
  headerImage   String?
  releaseDate   DateTime?
  createdAt     DateTime     @default(now())
  prices        GamePrice[]
  wishlists     Wishlist[]
}

model Store {
  id      Int         @id @default(autoincrement())
  name    String      @unique
  website String
  prices  GamePrice[]
}

model GamePrice {
  id            Int      @id @default(autoincrement())
  game          Game     @relation(fields: [gameId], references: [id])
  gameId        Int
  store         Store    @relation(fields: [storeId], references: [id])
  storeId       Int
  price         Float
  currency      String
  link          String
  discount      Int?
  lastChecked   DateTime @default(now())
}

model Wishlist {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  game      Game     @relation(fields: [gameId], references: [id])
  gameId    Int
  createdAt DateTime @default(now())
}